<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterActivityFind">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="10dp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/place_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Type"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp">
                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="Restaurant"
                    android:textOn="Restaurant"
                    android:drawableTop="@drawable/ic_baseline_restaurant_48"
                    android:gravity="center"
                    android:layout_marginStart="35dp"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:drawableTop="@drawable/ic_baseline_local_cafe_24"
                    android:gravity="center"
                    android:layout_marginEnd="35dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp" />
        </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp">
                <ToggleButton
                    android:id="@+id/toggleButtonRate1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textOff="1 +"
                    android:textOn="1 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonRate2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="2 +"
                    android:textOn="2 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonRate3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="3 +"
                    android:textOn="3 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonRate4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="4 +"
                    android:textOn="4 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp">
                <ToggleButton
                    android:id="@+id/toggleButtonPrice1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="1"
                    android:textOn="1"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="20dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_attach_money_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonPrice2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="1"
                    android:textOn="1"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="20dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonPrice3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="1 +"
                    android:textOn="1 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
                <ToggleButton
                    android:id="@+id/toggleButtonPrice4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="1 +"
                    android:textOn="1 +"
                    android:background="@drawable/toggle_button"
                    android:paddingHorizontal="15dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="15dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/clear_button_background" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apply Filters"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="15dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/apply_button_background" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>