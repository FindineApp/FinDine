<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userProfilePicView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/userNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Peter Na"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/userDateView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="a week ago"
                    android:textColor="@color/grey"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <RatingBar
                android:id="@+id/userRateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:stepSize="0.5"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/userDescriptionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:text="this is a test review for testing purposes"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/light_grey"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>